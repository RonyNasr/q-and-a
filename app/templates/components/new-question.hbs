<h3>click below to ask a new question</h3>
{{#if addQuestion}}
  <div class="new-question">
    <div class="col-sm-8 ">
      <form>
        <div class="form-group">
          <label for="author">Your name</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="title">Question</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="content">Question Details</label>
          {{input value=content id="content"}}
        </div>

        <button class="btn btn-primary" {{action 'saveQuestion' }}>Save</button>
      </form>
    </div>
  </div>
{{else}}
  <button {{action 'showQuestionForm'}} class="btn btn-primary">Ask a Question</button>
{{/if}}
