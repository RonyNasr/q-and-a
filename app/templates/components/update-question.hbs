{{#if updateQuestion}}
  <div class="new-question">
    <div class="col-sm-8 ">
      <form>
        <div class="form-group">
          <label for="author">Your name</label>
          {{input value=author id="author" placeholder=question.author}}
        </div>

        <div class="form-group">
          <label for="title">Question</label>
          {{input value=title id="title" placeholder=question.title}}
        </div>

        <div class="form-group">
          <label for="content">Question Details</label>
          {{textarea rows="2" value=content id="content" placeholder=question.content}}
        </div>

        <button class="btn btn-primary" {{action 'update' question}}>Save</button>
      </form>
    </div>
  </div>
{{else}}
  <button {{action 'showUpdateForm'}} class="btn btn-primary">Ask a Question</button>
{{/if}}
